<section id="extra-links">

</section>

<section id="posts-section">
    <h1>Codieal <%= title %> </h1>

<section id="feed-posts">
    <div id="post-box">
        <h4>Posts</h4>

        <% if(locals.user){ %>
    
        <form action="/posts/create" id="new-post-form" enctype="multipart/form-data" method="POST">
                <textarea id="post-i" name="content" cols="30" rows="2" placeholder="What's on your mind, <%= locals.user.name%>?" required></textarea>
                
                <input type="file" name="pposts" placeholder="Photo">
                
                <button type="submit">POST</button>
        </form>
    
        <% } %>
    </div>
    <div id="post-list-container">
        <ul>
            
                <% for(post of posts){ %>
                    <%- include("_post") -%>
                <% } %>
            
        </ul>
    </div>
</section>
</section>

<section id="user-friends">
    <div>
        <h3>Friends</h3>
        <% for(u of all_users){ %>
            <div class="friends-box">
                <a href="/users/profile/<%= u.id %>">
                    <img class="pro-pic" src="<%= u.avatar %>" alt="<%= u.name %>">
                    <%= u.name %>
                </a>
            </div>
        <% } %>
    </div>
</section>
